<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.72" xmlns:fx="http://javafx.com/fxml/1" fx:controller="camouse.CamouseController">
   <right>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="startButton" mnemonicParsing="false" onAction="#startCamera" text="Start/Stop Camera" />
         </children>
      </HBox>
   </bottom>
   <center>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="originalImageView" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" />
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <ImageView fx:id="hsvReducedImageView" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                  <ImageView fx:id="finalImageView" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
               </children></VBox>
         </children>
      </HBox>
   </center>
</BorderPane>
